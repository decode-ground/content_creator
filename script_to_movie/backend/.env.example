# Database (MySQL with async driver)
DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/script_to_movie

# JWT Authentication
JWT_SECRET=change-me-to-a-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=365

# Anthropic (Claude API) — required for all phases
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# AWS S3 (for storing images, videos, final movies)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# App
DEBUG=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Kling AI (Video Generation — for trailer generation)
KLING_ACCESS_KEY=
KLING_SECRET_KEY=

